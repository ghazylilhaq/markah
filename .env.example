DATABASE_URL="postgresql://markah:markah@localhost:5433/markah"
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true
LLM_PROVIDER="claude"  # claude | openai | ollama
LLM_API_KEY="your-api-key-here"

# X (Twitter) Integration
# Create an X Developer App at https://developer.x.com and enable OAuth 2.0.
# Set the redirect URI in your app settings to: http://localhost:3000/api/auth/x/callback
# (For production, change the host to your domain.)
X_CLIENT_ID="your-x-client-id"
X_CLIENT_SECRET="your-x-client-secret"
# The full callback URL registered in your X Developer App
X_REDIRECT_URI="http://localhost:3000/api/auth/x/callback"

# Secret used to protect the background sync cron endpoint (/api/cron/sync-x).
# Set to a long random string. Pass as Authorization: Bearer <CRON_SECRET> when calling the endpoint.
CRON_SECRET="your-cron-secret-here"

# Maximum number of X bookmarks to import per sync cycle (default: 50).
# Increase to import more bookmarks at once (subject to X API rate limits).
MAX_SYNC_BOOKMARKS=50
